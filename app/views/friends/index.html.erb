

<h1>Friend List</h1>
<%if user_signed_in? %>

  <%= form_tag('/friends', method: 'get') do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag("Search", name: nil) %>
  <% end %>

  <br>

  <table class="table table-striped table-bordered border-primary table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>        
        <th>Email</th>
        <th>Phone</th>
        <th>Colour</th>              
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td>
              <%= link_to friend.first_name + ' ' + friend.last_name , friend %>                          
            </td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.colour %></td>                                      
            
            <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
          
          </tr>
        <%end%>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
<% else %>
  <h1>Rails hosted</h1>
  
  
  
<% end %>

